  {
    "name": "Super Tool Sale Viewer",
    "version": "0.1.0",
    "description": "Makes the supertool sales pages look a bit better",
    "manifest_version": 2,
    "content_scripts": [{
        "css": ["styles.css"],
        "js": ["content.js"],
        "matches": ["http://www.supertool.com/forsale/*list.html"]
      }],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
    "permissions": [
      "storage"
    ]
  }